<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@android:color/white"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- 상단 안내 텍스트 -->
        <TextView
            android:id="@+id/signup_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="필수 정보를 입력해주세요."
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:paddingBottom="16dp"/>

        <!-- 앱의 고유 아이디 입력 필드 -->
        <TextView
            android:id="@+id/signup_email_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="앱의 고유 아이디는 카카오 아이디의 앞 부분입니다."
            android:textColor="@color/black"
            android:textSize="14sp"/>

        <EditText
            android:id="@+id/signup_edittext_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="아이디 입력"
            android:inputType="textEmailAddress"
            android:textColor="@color/black"
            android:textColorHint="@color/gray_200"
            android:importantForAccessibility="yes"
            android:layout_marginBottom="16dp"/>

        <!-- 닉네임 입력 필드 -->
        <TextView
            android:id="@+id/signup_nickname_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="닉네임"
            android:textColor="@color/black"
            android:textSize="14sp"/>

        <EditText
            android:id="@+id/signup_edittext_nickname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="앱에서 사용할 닉네임 (최대 8자)"
            android:maxLength="8"
            android:textColor="@color/black"
            android:textColorHint="@color/gray_200"
            android:importantForAccessibility="yes"
            android:layout_marginBottom="16dp"/>

        <!-- 카테고리 설정 타이틀 -->
        <TextView
            android:id="@+id/signup_category_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="카테고리 설정하기 (1-3개)"
            android:textSize="14sp"
            android:textColor="@color/black"/>

        <!-- 카테고리 선택 버튼들 -->
        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:columnCount="4"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp">

            <ToggleButton
                android:id="@+id/signup_togglebutton_category_hiphop"
                android:textOn="힙합"
                android:textOff="힙합"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/all_rounded_toggle_button"/>

            <ToggleButton
                android:id="@+id/signup_togglebutton_category_rock"
                android:textOn="Rock"
                android:textOff="Rock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/all_rounded_toggle_button"/>

            <ToggleButton
                android:id="@+id/signup_togglebutton_category_pop"
                android:textOn="POP"
                android:textOff="POP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/all_rounded_toggle_button"/>

            <ToggleButton
                android:id="@+id/signup_togglebutton_category_jpop"
                android:textOn="Jpop"
                android:textOff="Jpop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/all_rounded_toggle_button"/>

            <ToggleButton
                android:id="@+id/signup_togglebutton_category_ballad"
                android:textOn="발라드"
                android:textOff="발라드"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/all_rounded_toggle_button"/>

            <ToggleButton
                android:id="@+id/signup_togglebutton_category_dance"
                android:textOn="댄스"
                android:textOff="댄스"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/all_rounded_toggle_button"/>

            <ToggleButton
                android:id="@+id/signup_togglebutton_category_rnb"
                android:textOn="RnB"
                android:textOff="RnB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/all_rounded_toggle_button"/>
        </GridLayout>

        <!-- 약관 동의 체크박스 -->
        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/signup_radiobutton_service"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="서비스이용약관에 동의합니다."
                android:textColor="@color/black"
                android:checked="true"/>

            <RadioButton
                android:id="@+id/signup_radiobutton_privacy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="개인정보 수집 이용에 동의"
                android:textColor="@color/black"/>
        </RadioGroup>

        <!-- 계속 가입하기 버튼 -->
        <Button
            android:id="@+id/signup_button_continue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="계속 가입하기"
            android:background="@drawable/all_rounded_button"
            android:textColor="@color/black"
            android:layout_marginTop="24dp"/>
    </LinearLayout>
</ScrollView>
