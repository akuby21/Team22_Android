<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="8dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/share_music_card_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="50dp"
        app:cardElevation="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/share_music_imageview"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:contentDescription="@string/share_album_image"
            android:src="@drawable/stalker" />

    </androidx.cardview.widget.CardView>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:layout_marginStart="15dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="@+id/share_music_card_view"
        app:layout_constraintStart_toEndOf="@id/share_music_card_view"
        app:layout_constraintTop_toTopOf="@+id/share_music_card_view">

        <TextView
            android:id="@+id/share_music_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/share_music_name"
            android:textColor="@color/black"
            android:textSize="17sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/share_singer_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/share_singer_name"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/share_sort_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/share_sort_count"
            android:textColor="@color/gray_500"
            android:textSize="11sp" />

    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.constraintlayout.widget.ConstraintLayout>