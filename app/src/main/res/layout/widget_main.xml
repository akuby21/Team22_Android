<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"> <!-- 배경 투명화 -->

    <!-- 원형 이미지 (프로필 이미지) -->
    <androidx.cardview.widget.CardView
        android:id="@+id/profile_cardview"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"
        android:elevation="4dp"
        app:cardCornerRadius="50dp"
        app:cardElevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/widget_imageview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/widget_image" />
    </androidx.cardview.widget.CardView>

    <!-- 닉네임 첫 글자 레이블 (원형 배경) -->
    <androidx.cardview.widget.CardView
        android:id="@+id/text_circle_background"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:elevation="4dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="8dp"
        app:layout_constraintBottom_toBottomOf="@id/profile_cardview"
        app:layout_constraintEnd_toEndOf="@id/profile_cardview"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp">

        <TextView
            android:id="@+id/widget_textview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="쿠"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_medium" />
    </androidx.cardview.widget.CardView>

    <!-- 알림용 빨간 점 (동그랗게 표시) -->
    <View
        android:id="@+id/widget_notification_dot"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:background="@drawable/widget_notice"
        app:layout_constraintTop_toTopOf="@id/profile_cardview"
        app:layout_constraintEnd_toEndOf="@id/profile_cardview"
        android:visibility="visible" />
</androidx.constraintlayout.widget.ConstraintLayout>