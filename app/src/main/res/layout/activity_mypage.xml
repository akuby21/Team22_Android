<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@android:color/white"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- 프로필 이미지 및 정보 -->
        <ImageView
            android:id="@+id/profile_imageview"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/all_profile_placeholder"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:layout_marginTop="16dp"/>

        <TextView
            android:id="@+id/profile_textview_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="김남남"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_marginTop="8dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/profile_textview_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="nammynam@naver.com"
            android:textColor="@color/gray_500"
            android:textSize="14sp"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/profile_textview_intro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="한줄 소개글 두줄소개까지?"
            android:textColor="@color/gray_500"
            android:textSize="14sp"
            android:layout_marginTop="4dp" />

        <!-- 카테고리 설정 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="카테고리 설정"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_marginTop="16dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal">

            <!-- Category Buttons -->
            <Button
                android:text="힙합"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:background="@drawable/all_rounded_toggle_button"
                android:layout_margin="4dp" />

            <Button
                android:text="Rock"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:background="@drawable/all_rounded_toggle_button"
                android:layout_margin="4dp" />

            <Button
                android:text="POP"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:background="@drawable/all_rounded_toggle_button"
                android:layout_margin="4dp" />

            <Button
                android:text="Jpop"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:background="@drawable/all_rounded_toggle_button"
                android:layout_margin="4dp" />
        </LinearLayout>

        <!-- 공유한 노래 목록 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="내가 공유한 노래"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_marginTop="24dp" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="3"
            android:layout_marginTop="8dp">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/mypage_album1"
                android:layout_margin="8dp" />

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/mypage_album2"
                android:layout_margin="8dp" />

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/mypage_album3"
                android:layout_margin="8dp" />
        </GridLayout>

        <!-- 탈퇴하기 버튼 -->
        <Button
            android:id="@+id/leave_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="탈퇴하기"
            android:textColor="@color/white"
            android:backgroundTint="@color/red"
            android:layout_marginTop="24dp" />
    </LinearLayout>
</ScrollView>
